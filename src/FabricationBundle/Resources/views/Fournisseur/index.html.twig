{% extends "AuthBundle::layout.html.twig" %}

{%block extra_css%}
{% stylesheets "@AuthBundle/Resources/public/css/users/select2.css" %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% stylesheets "@AuthBundle/Resources/public/css/users/dataTables.bootstrap.css" %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% stylesheets "@AuthBundle/Resources/public/css/users/bootstrap-datepicker3.min.css" %}
<link rel="stylesheet" href="{{ asset_url }}" />
{% endstylesheets %}
{% endblock %}

{%block page_content%} 
<div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
							<h4 class="modal-title">Modal title</h4>
						</div>
						<div class="modal-body">
							 Widget settings form goes here
						</div>
						<div class="modal-footer">
							<button type="button" class="btn blue">Save changes</button>
							<button type="button" class="btn default" data-dismiss="modal">Close</button>
						</div>
					</div>
					<!-- /.modal-content -->
				</div>
				<!-- /.modal-dialog -->
			</div>
	<h3 class="page-title">
		Gestion des fournisseurs
		<small> Fournisseurs </small>
	</h3>
	<div class="page-bar">
		<ul class="page-breadcrumb">
			<li>
				<i class="fa fa-home"></i>
				<a href="#">Home</a>
				<i class="fa fa-angle-right"></i>
			</li>
			<li>
				<a href="#">Fabrication</a>
				<i class="fa fa-angle-right"></i>
			</li>
			<li>
				<a href="#">Fournisseurs</a>
			</li>
		</ul>
	</div>
<div class="row">
	<div class="col-md-12">
		<!-- BEGIN EXAMPLE TABLE PORTLET-->
		<div class="portlet box blue">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-edit"></i>Gestion des fournisseurs
				</div>
				<div class="tools">
					<a href="#portlet-config" data-toggle="modal" class="config">
					</a>
					<a href="javascript:;" class="reload">
					</a>
				</div>
			</div>
			<div class="portlet-body">
				<div class="table-toolbar">
					<div class="row">
						<div class="col-md-6">
							<div class="btn-group">
								<button id="sample_editable_new" class="btn green">
								Ajouter un nouveau <i class="fa fa-plus"></i>
								</button>
							</div>
						</div>
						<div class="col-md-6">
							<div class="btn-group pull-right">
								<button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="fa fa-angle-down"></i>
								</button>
								<ul class="dropdown-menu pull-right">
									<li>
										<a href="javascript:;">
										Print </a>
									</li>
									<li>
										<a href="javascript:;">
										Save as PDF </a>
									</li>
									<li>
										<a href="javascript:;">
										Export to Excel </a>
									</li>
								</ul>
							</div>
						</div>
					</div>
				</div>
				<table class="table table-striped table-hover table-bordered" id="sample_editable">
				<thead>
				<tr>
					<th>
						 Nom
					</th>
					<th>
						Email
					</th>
					<th>
						Phone
					</th>
					<th>
						Fax
					</th>
					<th>
						Adresse
					</th>
					<th width="80">
						Editer
					</th>
					<th width="80">
						 Supprimer
					</th>
				</tr>
				</thead>
				<tbody>
				{% for item in data %}
				<tr>
					<td>
						{{ item.Name}}
					</td>
					<td>
						{{ item.Email}}
					</td>
					<td>
						{{ item.Phone}}
					</td>
					<td>
						{{ item.Fax}}
					</td>
					<td>
						{{ item.Adress}}
					</td>
					<td>
						<a class="edit btn btn-xs blue" data-id="{{ item.id}}" href="javascript:;">
						<i class="fa fa-edit"></i> Editer </a>
					</td>
					<td>
						<a class="delete btn btn-xs red" data-id="{{ item.id}}" href="javascript:;">
						<i class="fa fa-times"></i> Supprimer </a>
					</td>
				</tr>
				{% endfor %}
				</tbody>
				</table>
			</div>
		</div>
		<!-- END EXAMPLE TABLE PORTLET-->
	</div>
</div>
			
{% endblock %}

{%block extra_js%} 
{% javascripts '@AuthBundle/Resources/public/js/users/select2.min.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% javascripts '@AuthBundle/Resources/public/js/users/jquery.dataTables.min.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% javascripts '@AuthBundle/Resources/public/js/users/dataTables.bootstrap.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% javascripts '@FabricationBundle/Resources/public/js/table-editable-fournisseur.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

<script>
jQuery(document).ready(function() {    
TableEditable.init()
});
</script>
{% endblock %}