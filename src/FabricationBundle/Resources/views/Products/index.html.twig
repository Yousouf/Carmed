{% extends "AuthBundle::layout.html.twig" %}

{%block extra_css%}
    {% stylesheets "@AuthBundle/Resources/public/css/users/select2.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@FabricationBundle/Resources/public/css/dataTables.scroller.min.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@FabricationBundle/Resources/public/css/dataTables.colReorder.min.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@AuthBundle/Resources/public/css/users/dataTables.bootstrap.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block page_content %}
    <div class="modal fade" id="portlet-config" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    Widget settings form goes here
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn blue">Save changes</button>
                    <button type="button" class="btn default" data-dismiss="modal">Close</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <h3 class="page-title">
        Matière première
        <small> Gestion du matière première</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Fabrication</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Matière première</a>
            </li>
        </ul>
		<div class="page-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('admin_fabrication_products_add') }}" class="btn green">
                    <i class="fa fa-plus"></i> Ajouter un nouveau
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-edit"></i>Gestion de matiere premiere
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-hover table-bordered" id="advenced_table">
                        <thead>
                        <tr>
                            <th>
                                Nom
                            </th>
                            <th>
                                Reference
                            </th>
                            <th>
                                Prix d'achat
                            </th>
                            <th>
                                Tax
                            </th>
                            <th>
                                Type
                            </th>
                            <th>
                                Unit
                            </th>
							<th>
                                Emballage
                            </th>
                            <th width="110">
                                Actions
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in data %}
                            <tr>
                                <td>
                                    {{ item.Name }}
                                </td>
                                <td>
                                    {{ item.Reference }}
                                </td>
                                <td>
                                    {{ item.WholesalePrice }}
                                </td>
                                <td>
                                    {{ item.Tax }}
                                </td>
                                <td>
                                    {{ item.Type }}
                                </td>
                                <td>
                                    {{ item.Unit }}
                                </td>
								<td  class="text-center" width="20">
									{% if item.Emballage == 1 %} <span class="glyphicon glyphicon-thumbs-up font-green"></span> {% else %}  <span class="glyphicon glyphicon-thumbs-down font-red"></span>{% endif %}
								</td>
                                <td width="110" class="text-center">
									<a href="{{ path('admin_fabrication_products_update',{id:item.id}) }}" class="btn btn-icon-only blue">
										<i class="fa fa-edit"></i>
									</a>
									<a href="{{ path('admin_fabrication_products_delete',{id:item.id}) }}" class="btn btn-icon-only red">
										<i class="fa fa-trash-o"></i>
									</a>
								</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>

{% endblock %}

{%block extra_js%}
    {% javascripts '@AuthBundle/Resources/public/js/users/select2.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/jquery.dataTables.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.tableTools.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.colReorder.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.scroller.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/dataTables.bootstrap.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/stock.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        jQuery(document).ready(function () {
            TableAdvanced.init()
        });
    </script>
{% endblock %}