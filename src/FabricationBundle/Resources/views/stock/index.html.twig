{% extends "AuthBundle::layout.html.twig" %}

{%block extra_css%}
    {% stylesheets "@AuthBundle/Resources/public/css/users/select2.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@FabricationBundle/Resources/public/css/dataTables.scroller.min.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@FabricationBundle/Resources/public/css/dataTables.colReorder.min.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@AuthBundle/Resources/public/css/users/dataTables.bootstrap.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{%block page_content%} 
    <h3 class="page-title">
        Gestion du stock <small>Stock</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Fabrication</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Mouvement du stock</a>
            </li>
        </ul>
        <div class="page-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('admin_fabrication_stock_add') }}" class="btn green">
                    <i class="fa fa-plus"></i> Nouveau insertion
                </a>
            </div>
        </div>
    </div>
    <div class="portlet box green-haze">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-globe"></i> Mouvement du stock
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="advenced_table">
                <thead>
                    <tr>
                        <th>
                            Produit
                        </th>
                        <th>
                            Fournisseur
                        </th>
                        <th>
                            Quantit√©
                        </th>
                        <th>
                            Mouvement
                        </th>
                        <th>
                            Utilisateur
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                {% for item in data %}
                    <tr>
                        <td>
                            {{ item.product }}
                        </td>
                        <td>
                            {{ item.fournisseur }}
                        </td>
                        <td>
                            {{ item.quantity }}
                        </td>
                        <td>
                            {{ item.movement }}
                        </td>
                        <td>
                            {{ item.user}}
                        </td>
                        <td width="110">
                            <div class="btn-group">
                                <button type="button" class="btn blue">Actions</button>
                                <button type="button" class="btn blue dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-angle-down"></i></button>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="{{ path('admin_fabrication_stock_edit',{id:item.id}) }}">
                                            Editer </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_fabrication_stock_delete',{id:item.id}) }}">
                                            Supprimer </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{%block extra_js%} 
    {% javascripts '@AuthBundle/Resources/public/js/users/select2.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/jquery.dataTables.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.tableTools.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.colReorder.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.scroller.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/dataTables.bootstrap.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/stock.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        jQuery(document).ready(function () {
            TableAdvanced.init()
        });
    </script>
{% endblock %}