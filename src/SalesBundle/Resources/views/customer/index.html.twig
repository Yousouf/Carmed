{% extends "AuthBundle::layout.html.twig" %}

{%block extra_css%}
    {% stylesheets "@AuthBundle/Resources/public/css/users/select2.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@FabricationBundle/Resources/public/css/dataTables.scroller.min.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@FabricationBundle/Resources/public/css/dataTables.colReorder.min.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@AuthBundle/Resources/public/css/users/dataTables.bootstrap.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{%block page_content%}
    <h3 class="page-title">
        Gestion du stock <small>Stock</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Vente</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Client</a>
            </li>
        </ul>
        <div class="page-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('admin_sales_customer_add') }}" class="btn green">
                    <i class="fa fa-plus"></i> Nouveau Client
                </a>
            </div>
        </div>
    </div>
    <div class="portlet box green-haze">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-users"></i> Espace client
            </div>
        </div>
        <div class="portlet-body">
            <table class="table table-striped table-bordered table-hover" id="advenced_table">
                <thead>
                <tr>
                    <th>
                        Prenom
                    </th>
                    <th>
                        Nom
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Cite
                    </th>
                    <th>
                        Paye
                    </th>
                    <th>
                        Adresse
                    </th>
                    <th>
                        Code postal
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for item in data %}
                    <tr>
                        <td>
                            {{ item.Firstname }}
                        </td>
                        <td>
                            {{ item.Lastname }}
                        </td>
                        <td>
                            {{ item.mobile }}
                        </td>
                        <td>
                            {{ item.email }}
                        </td>
                        <td>
                            {{ item.City }}
                        </td>
                        <td>
                            {{ item.Country }}
                        </td>
                        <td>
                            {{ item.Address }}
                        </td>
                        <td>
                            {{ item.Postalcode }}
                        </td>
                        <td width="110" class="text-center">
                            <a href="{{ path('admin_sales_customer_update',{id:item.id}) }}" class="btn btn-icon-only blue">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="{{ path('admin_sales_customer_delete',{id:item.id}) }}" class="btn btn-icon-only red">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{%block extra_js%}
    {% javascripts '@AuthBundle/Resources/public/js/users/select2.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/jquery.dataTables.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.tableTools.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.colReorder.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@FabricationBundle/Resources/public/js/dataTables.scroller.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/dataTables.bootstrap.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@SalesBundle/Resources/public/js/TableCustomer.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        jQuery(document).ready(function () {
            TableAdvanced.init()
        });
    </script>
{% endblock %}