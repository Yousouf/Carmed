{% extends "AuthBundle::layout.html.twig" %}

{%block extra_css%}
    {% stylesheets "@AuthBundle/Resources/public/css/users/select2.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets "@AuthBundle/Resources/public/css/users/dataTables.bootstrap.css" %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{%block page_content%} 

    <h3 class="page-title">
        Commandes <small>Liste des commandes</small>
    </h3>
    <!-- BEGIN PAGE CONTENT-->
    <div class="row">
        <div class="col-md-12">
            <!--div class="note note-danger">
                    <p>
                             NOTE: The below datatable is not connected to a real database so the filter and sorting is just simulated for demo purposes only.
                    </p>
            </div-->
            <!-- Begin: life time stats -->
            <div class="portlet">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-shopping-cart"></i> Liste commandes
                    </div>
                    <div class="actions">
                        <a href="{{ path('admin_sales_orders_add') }}" class="btn default yellow-stripe">
                            <i class="fa fa-plus"></i>
                            <span class="hidden-480">
                                Nouveau </span>
                        </a>
                        <div class="btn-group">
                            <a class="btn default yellow-stripe dropdown-toggle" href="javascript:;" data-toggle="dropdown">
                                <i class="fa fa-share"></i>
                                <span class="hidden-480">
                                    Options </span>
                                <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li>
                                    <a href="javascript:;">
                                        Export to Excel </a>
                                </li>
                                <li>
                                    <a href="javascript:;">
                                        Export to CSV </a>
                                </li>
                                <li>
                                    <a href="javascript:;">
                                        Export to XML </a>
                                </li>
                                <li class="divider">
                                </li>
                                <li>
                                    <a href="javascript:;">
                                        Print Invoices </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-container">
                        <div class="table-actions-wrapper">
                            <span>
                            </span>
                            <select class="table-group-action-input form-control input-inline input-small input-sm">
                                <option value="">Select...</option>
                                <option value="Cancel">Cancel</option>
                                <option value="Cancel">Hold</option>
                                <option value="Cancel">On Hold</option>
                                <option value="Close">Close</option>
                            </select>
                            <button class="btn btn-sm yellow table-group-action-submit"><i class="fa fa-check"></i> Submit</button>
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="datatable_orders">
                            <thead>
                                <tr role="row" class="heading">
                                    <th width="2%" >
                                        <input type="checkbox" class="group-checkable">
                                    </th>
                                    <th width="5%">
                                        ID
                                    </th>
                                    <th width="20%">
                                        Client
                                    </th>
                                    <th width="15%" align="center">
                                        Total
                                    </th>
                                    <th width="15%">
                                        Date 
                                    </th>
                                    <th width="5%">
                                        produit
                                    </th>
                                    <th width="20%">
                                        Status
                                    </th>
                                    <th width="25%">
                                        Actions
                                    </th>
                                </tr>
                                <tr role="row" class="filter">
                                    <td>
                                    </td>
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" name="id">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control form-filter input-sm" name="customer">
                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-search"></i> Search</button>
                                        <button class="btn btn-sm red filter-cancel"><i class="fa fa-times"></i> Reset</button>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
    </div>


{% endblock %}

{%block extra_js%} 
    {% javascripts '@AuthBundle/Resources/public/js/users/select2.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/jquery.dataTables.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/dataTables.bootstrap.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/bootstrap-datepicker.min.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@AuthBundle/Resources/public/js/users/datatable.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% javascripts '@SalesBundle/Resources/public/js/orders_index.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        jQuery(document).ready(function () {
            OrdersIndex.init()
        });
    </script>
{% endblock %}
