
<style>
    tr.even {background-color: #f2f2f2;}
    td {
        text-align: left;
    }
    th {
        background-color: #5b9bd1;
        color: white;
        text-align: left;
    }
</style>

<table  cellpadding="5">
    <thead>
    <tr>
        <th>
            Produit
        </th>
        <th>
            Référence
        </th>
        <th  width="120">
            Prix HT
        </th>
        <th  width="80">
            TVA
        </th>
        <th  width="120">
            Prix TTC
        </th>
    </tr>
    </thead>
    <tbody>
    {% for item in data %}
        <tr{% if loop.index is divisible by(2) %} class="even" {% endif %}>
            <td>
                {{ item.name }}
            </td>
            <td>
                {{ item.sku }}
            </td>
            <td width="120">
                {{ item.price }} TND
            </td>
            <td width="80">
                {{ item.tax }}%
            </td>
            <td width="120">
                {% if item.useTax == 1 %} {{ (item.price * (1+(item.tax/100))) |round(3) | number_format( 3, '.', ' ') }}{% else %} {{ item.price }} {% endif %}
                TND
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
